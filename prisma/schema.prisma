
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  COACH
  MEMBER
}

enum CoachType {
  HEAD_COACH
  COACH
  ASSISTANT_COACH
  PERFORMANCE_ANALYST
}

model User {
  id          String   @id @default(cuid()) // Supabase Auth user ID veya auto-generated ID
  email       String?  @unique // Optional - Supabase Auth olmayan kullanıcılar için null olabilir
  name        String?
  studentName String?  // Öğrenci adı
  role        UserRole @default(MEMBER)
  // password field artık gerekli değil (Supabase Auth yönetiyor)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  enrollments Enrollment[]
  lessons     Lesson[] // Antrenör dersleri
  groups      GroupMember[] // Grup üyelikleri
}

model Program {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  level       String?
  duration    String?
  price       String?
  imageUrl    String?
  structure   String[] @default([])
  goals       String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  enrollments Enrollment[]
  groups      Group[] // Bu programa bağlı gruplar
}

model Tournament {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  location  String
  type      String // "Online" or "OTB"
  status    String // "Upcoming", "Ongoing", "Completed"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  programId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  program Program @relation(fields: [programId], references: [id], onDelete: Cascade)

  @@unique([userId, programId])
  @@index([userId])
  @@index([programId])
}

model Coach {
  id        String    @id @default(cuid())
  name      String
  title     String
  bio       String    @db.Text
  image     String?
  type      CoachType @default(COACH)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([type])
}

enum LessonType {
  INDIVIDUAL
  GROUP
}

model Lesson {
  id            String     @id @default(cuid())
  coachId       String
  date          DateTime
  startTime     String     // Format: "HH:mm" (e.g., "14:00")
  endTime       String     // Format: "HH:mm" (e.g., "15:30")
  type          LessonType
  studentIds    String[]   @default([]) // Öğrenci user ID'leri
  groupId       String?    // Grup dersi için grup ID (opsiyonel)
  isRecurring   Boolean    @default(false) // Haftalık tekrar eden mi?
  recurringEndDate DateTime? // Tekrar eden derslerin bitiş tarihi
  notes         String?    @db.Text
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  coach         User       @relation(fields: [coachId], references: [id], onDelete: Cascade)
  group         Group?     @relation(fields: [groupId], references: [id], onDelete: SetNull)

  @@index([coachId])
  @@index([date])
  @@index([coachId, date])
  @@index([groupId])
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  programId   String?  // Hangi programa bağlı (nullable - program silinince null olur)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  program Program?       @relation(fields: [programId], references: [id], onDelete: SetNull)
  members GroupMember[]  // Grup üyeleri
  lessons Lesson[]       // Bu gruba ait dersler

  @@index([programId])
}

model GroupMember {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
}
